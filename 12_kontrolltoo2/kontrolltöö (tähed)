interface LetterCounter {
	count(letter: string): number;
}

//s√µnade klass

class Word implements LetterCounter {
	private word: string;
	
	constructor(word: string) {
		this.word=word;
	}
	
	count(letter: string): number {
		let count=0;
		for (let i=0; i<this.word.length; i++){
			if(this.word.charAt(i)===letter){
				count++;
			}
		}
		return count;
	}
}

